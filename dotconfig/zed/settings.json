{
  "terminal": {
    "dock": "bottom"
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "ssh_connections": [
    {
      "host": "10.28.58.140",
      "username": "root",
      "port": 10033,
      "projects": [
        {
          "paths": ["/common"]
        },
        {
          "paths": ["/common/src"]
        }
      ],
      "nickname": "fw.dev.env"
    }
  ],
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "confirm_quit": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "lsp": {
    "clangd": {
      "binary": {
        "ignore_system_version": true
      }
    }
  }
}
